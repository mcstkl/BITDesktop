<Window x:Class="BITServices.View.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BITServices.View"
        mc:Ignorable="d"
        Title="Splash" Height="380" Width="600" AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        WindowStyle="None" BorderThickness="0" Background="Transparent" ResizeMode="NoResize"
        Cursor="Wait">  
    <Grid>
        <Image Width="1200" Height="450" Source="../Images/banner.jpg"/>
        <Image Margin="40 20 0 0" VerticalAlignment="Top" HorizontalAlignment="Left" 
               Height="200" Width="200" Source="../Images/logo.png"/>
        <Label Content="BITServices Management v0.2.11" Width="220" Height="80" 
               Margin="0 0 20 0" FontWeight="Bold"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"
               Background="Transparent"/>
    </Grid>
</Window>
